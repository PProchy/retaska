{% extends 'base.html.twig' %}

{% block title %}Hello ShowProductsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    <h1 >Products</h1>

    <div class="row">

    {% for product in products %}


        <div class="col-md-4">

            <h2 class="title"><a href="/retaska/public/show/{{ product.id }}">{{ product.name }}</a></h2>
            <div class="price">
                <p>Cena: {{ product.price }}</p>
            </div>
            <a class="add-to-cart" href="">Do košíku</a>


        </div>


    {% endfor %}



</div>
</div>
{% endblock %}
