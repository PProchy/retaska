{% extends 'base.html.twig' %}

{% block title %}Košík{% endblock %}

{% block body %}

    {% if basket is empty %}


        <div class="container my-5" align="center">

            <h3>Jsem tak prázdný...</h3>

            <p>
                <a href="{{ path('show_products') }}" class="btn btn-outline-info mt-2">Zobrazit produkty</a>
            </p>

        </div>

    {% else %}

        <div class="row" style="width: 100%;min-height: 35rem">

            <div class="col"></div>

            <div class="col-6">

                <h1 class="text-center">Košík</h1>

                <table class="table">

                    <thead class="thead-dark">
                    <tr>

                        <th scope="col">Název</th>
                        <th scope="col">Cena za kus</th>
                        <th scope="col">Počet</th>
                        <th scope="col">Přidat</th>
                        <th scope="col">Odebrat</th>
                        <th scope="col">Celkem</th>
                    </tr>
                    </thead>

                    <tbody>

                    {% for item in basket %}

                        <tr>


                            <td>{{ item.name }}</td>
                            <td>{{ item.price }}</td>
                            <td>{{ item.amount }}</td>
                            <td><a href="{{ path('basket_plus', {'id': item.id}) }}">
                                    <button class="btn btn-success">+</button>
                                </a></td>
                            <td><a href="{{ path('basket_minus', {'id': item.id}) }}">
                                    <button class="btn btn-danger">-</button>
                                </a></td>


                        </tr>


                    {% endfor %}
                    </tbody>

                </table>


                <div class="row">

                    <div class="col-4" align="left">

                        <button class="btn btn-outline-primary"><a
                                    href="{{ path('show_products') }}">Pokračovat v nákupu</a>
                        </button>


                    </div>

                    <div class="col-4" align="center">

                        <button class="btn btn-outline-primary"><a
                                    href="{{ path('basket_clear') }}">Vyprázdnit košík</a>
                        </button>


                    </div>


                    <div class="col-4" align="right">

                        <button class="btn btn-outline-primary"><a
                                    href="{{ path('show_products') }}">Přejít k objednávce</a>
                        </button>


                    </div>


                </div>


            </div>


            <div class="col"></div>


        </div>

    {% endif %}



{% endblock %}
