{% extends 'base.html.twig' %}

{% block title %}Košík{% endblock %}

{% block body %}

    <div class="row" style="width: 100%;min-height: 35rem">

        <div class="col"></div>

        <div class="col-6">

            <h1 class="text-center">Košík</h1>

            <table class="table">

                <thead class="thead-dark">
                <tr>

                    <th scope="col">Název</th>
                    <th scope="col">Cena za kus</th>
                    <th scope="col">Počet</th>
                    <th scope="col">Přidat</th>
                    <th scope="col">Odebrat</th>
                    <th scope="col">Celkem</th>
                </tr>
                </thead>

                <tbody>

                {% for item in basket %}

                    <tr>


                        <td>{{ item.name }}</td>
                        <td>{{ item.price }}</td>
                        <td>{{ item.amount }}</td>
                        <td><a href="{{ path('basket_plus', {'id': item.id}) }}">
                                <button class="btn btn-success">+</button>
                            </a></td>
                        <td><a href="{{ path('basket_minus', {'id': item.id}) }}">
                                <button class="btn btn-danger">-</button>
                            </a></td>


                    </tr>


                {% endfor %}
                </tbody>

            </table>


            <div class="row">

                <div class="col-6" align="left">

                    <button class="btn btn-outline-primary"><a
                                href="/retaska/public/show/products/">Pokračovat v nákupu</a>
                    </button>


                </div>

                <div class="col-6" align="right">

                    <button class="btn btn-outline-primary"><a
                                href="/retaska/public/show/products/">Přejít k objednávce</a>
                    </button>


                </div>


            </div>


        </div>


        <div class="col"></div>


    </div>



{% endblock %}
